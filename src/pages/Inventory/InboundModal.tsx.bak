import React, { useState, useEffect } from 'react';
import { X, Save } from 'lucide-react';
import { supabase } from '../../lib/supabase';
import { useAuth } from '../../contexts/AuthContext';
import styles from './Inventory.module.css';

interface InboundModalProps {
    isOpen: boolean;
    onClose: () => void;
    onSuccess: () => void;
}

export const InboundModal: React.FC<InboundModalProps> = ({ isOpen, onClose, onSuccess }) => {
    const { profile } = useAuth();
    const [products, setProducts] = useState<any[]>([]);
    const [selectedProduct, setSelectedProduct] = useState('');
    const [quantity, setQuantity] = useState(1);
    const [loading, setLoading] = useState(false);

    useEffect(() => {
        if (isOpen) {
            fetchProducts();
        }
    }, [isOpen]);

    const fetchProducts = async () => {
        const { data } = await supabase.from('products').select('id, name').order('name');
        setProducts(data || []);
    };

    const handleSubmit = async (e: React.FormEvent) => {
        e.preventDefault();
        setLoading(true);
        try {
            // 1. Record Movement
            const { error: moveError } = await supabase.from('inventory_movements').insert([{
                product_id: selectedProduct,
                type: 'IN',
                quantity,
                user_id: profile?.id
            }]);
            if (moveError) throw moveError;

            // 2. Update Product Stock (using RPC or manual update if no trigger)
            // Assuming no triggers as user didn't ask for advanced DB logic, so doing manual update.
            // Ideally should be RPC. For now: GET -> UPDATE.

            const { data: prod } = await supabase.from('products').select('quantity').eq('id', selectedProduct).single();
            const currentQty = prod?.quantity || 0;

            const { error: updateError } = await supabase
                .from('products')
                .update({ quantity: currentQty + quantity })
                .eq('id', selectedProduct);

            if (updateError) throw updateError;

            onSuccess();
            onClose();
            // Reset
            setSelectedProduct('');
            setQuantity(1);
        } catch (error) {
            console.error(error);
            alert('Erro ao registrar entrada.');
        } finally {
            setLoading(false);
        }
    };

    if (!isOpen) return null;

    return (
        <div className={styles.modalOverlay}>
            <div className={styles.modalContent}>
                <div className={styles.modalHeader}>
                    <h2>Entrada de Material</h2>
                    <button onClick={onClose}><X size={24} /></button>
                </div>
                <form onSubmit={handleSubmit}>
                    <div className={styles.formGroup}>
                        <label>Produto</label>
                        <select
                            required
                            className={styles.select}
                            value={selectedProduct}
                            onChange={e => setSelectedProduct(e.target.value)}
                        >
                            <option value="">Selecione...</option>
                            {products.map(p => <option key={p.id} value={p.id}>{p.name}</option>)}
                        </select>
                    </div>
                    <div className={styles.formGroup}>
                        <label>Quantidade</label>
                        <input
                            type="number"
                            required
                            min="1"
                            className={styles.input}
                            value={quantity}
                            onChange={e => setQuantity(parseInt(e.target.value) || 0)}
                        />
                    </div>
                    <div className={styles.modalActions}>
                        <button type="button" onClick={onClose} className={styles.cancelButton}>Cancelar</button>
                        <button type="submit" disabled={loading} className={styles.submitButton}>
                            <Save size={20} />
                            Confirmar Entrada
                        </button>
                    </div>
                </form>
            </div>
        </div>
    );
};
